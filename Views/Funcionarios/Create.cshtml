@model desafioRH.Models.Funcionario;

@{
    Layout = null;
}

<div class="justify-content-center">
    <div>

        <form asp-action="Create">

            <div class="row col-12 ">

                <div class="form-group col-5">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                </div>

                <div class="form-group col-5">
                    <label asp-for="EmailCorporativo" class="control-label">Email Corporativo</label>
                    <input asp-for="EmailCorporativo" class="form-control" />
                </div>            

            </div>  

            <div class="row col-12">
              
                <div class="form-group col-10">
                    <label asp-for="Endereco" class="control-label">Endereço</label>
                    <input asp-for="Endereco" class="form-control" />
                </div>

            </div>
            <div class="row col-12">                
                <div class="form-group col-4">
                    <label asp-for="Departamento" class="control-label"></label>
                    <input asp-for="Departamento" class="form-control" />
                </div>
                <div class="form-group col-2">
                    <label asp-for="Ramal" class="control-label"></label>
                    <input asp-for="Ramal" class="form-control" />
                </div>

                <div class="form-group col-2">
                    <label asp-for="Salario" class="control-label">Salário</label>
                    <input asp-for="Salario" class="form-control" type="number"/>
                </div>
                <div class="form-group col-2">
                    <label  asp-for="DataAdmissao" class="control-label">Data de Admissão</label>
                    <input asp-for="DataAdmissao" class="form-control" type="date" />
                </div>
            </div>
          

            <div class="row col-12">
                <div class="form-group col-10">
                    <input type="submit" value="Save" class="btn btn-primary button-P" />
                    <a asp-action="Index" class="btn btn-secondary button-P">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>
